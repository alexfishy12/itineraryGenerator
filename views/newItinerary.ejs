<div class="page1 container" id="formPage">
  <div class="row d-flex justify-content-center">
    <div class="col-md-6 text-center">
      <div class="h3 text-center" id="header">First, input desired trip length.</div>
      <div class="step1 step4">
        <br>
          <div class="input-group text-center">
            <span class="input-group-text">Desired Trip Time</span>
            <input type="number" class="form-control" id="setTime" maxlength="3" size="3" min="1" max="300" placeholder="" aria-describedby="basic-addon2"/>               
            <span class="input-group-text" id="basic-addon2">hours</span> 
          </div>
      </div>
      <br>

      <div class="step2 step3" style="display:none">
        <input id="pac-input" class="form-control" type="text-search" placeholder="Search"/>
        <div class="errorMessage h6 text-danger"></div>
      </div>
    <!--<div class="step2" style="display:none">
        <input type="checkbox" class="form-check-input" id="sameAsDest">
          <label for="sameAsDest" class="form-check-label" id="checkboxLabel">Same location as destination?</label>
          <br>
      </div>-->

      <div class="step4" style="display:none">
        <div class="container text-center">
          <div class="row border align-items-center">
            <span class="input-group-text col-sm-3" style="height:100%" id="originLabel">Origin</span>
            <span class="col overflow-hidden text-start" id="origin" aria-describedby="originLabel"></span>
            <span class="col-sm-2 text-center px-1">
              <button class="btn btn-sm btn-warning" type="button" id="changeOrigin">Change</button>
            </span>
          </div>
          <br>
          <div class="row border align-items-center">
            <span class="input-group-text col-sm-3" id="destinationLabel">Destination</span>
            <span class="col overflow-hidden text-start" id="destination" aria-describedby="destinationLabel"></span>
            <span class="col-sm-2 text-center px-1">
              <button class="btn btn-sm btn-warning" type="button" id="changeDestination">Change</button>
            </span>
          </div>
        </div>
      </div>
      <br>
        <div class="">
          <button type="button" class="btn btn-danger btn step2 step3 step4" id="backButton" style="display:none">Back</button>
          <button type="button" class="btn btn-primary btn step1 step2 step3" id="continueButton">Continue</button>
          <button type="button" class="btn btn-success btn step4" id="buildButton" style="display:none">Build It!</button>
        </div>
    </div>
  </div>
</div>